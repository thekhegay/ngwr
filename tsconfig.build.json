{
  "extends": "./tsconfig.json",
  "exclude": ["projects/**/test.ts", "**/*.spec.ts"],
  "compilerOptions": {
    "outDir": "./dist/out-tsc/lib",
    "declaration": true,
    "sourceMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "paths": {
      "ngwr/*": ["./dist/lib/*"],
      "showcase/*": ["./dist/showcase/*"]
    },
    "target": "ES2022",
    "useDefineForClassFields": false
  }
}
